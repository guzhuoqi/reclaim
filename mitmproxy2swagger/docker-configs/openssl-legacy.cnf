# OpenSSL configuration to enable legacy renegotiation
# This fixes the "unsafe legacy renegotiation disabled" error in containers

# Enable unsafe legacy renegotiation for compatibility with older servers
Options = UnsafeLegacyRenegotiation

# Lower security level to allow legacy ciphers
CipherString = DEFAULT@SECLEVEL=1

# Allow legacy renegotiation in SSL/TLS connections
[openssl_init]
ssl_conf = ssl_sect

[ssl_sect]
system_default = system_default_sect

[system_default_sect]
Options = UnsafeLegacyRenegotiation
CipherString = DEFAULT@SECLEVEL=1
